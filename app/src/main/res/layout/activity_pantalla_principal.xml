    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_pantallaPrincipal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/recuadro_saldo"
        app:layout_constraintBottom_toTopOf="@id/anadir_gasto_boton"
        android:background="?attr/colorSurface">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/anadir_gasto_boton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary"
        android:text="@string/a_adir_gasto"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>