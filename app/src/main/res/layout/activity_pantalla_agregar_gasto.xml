<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceVariant"
    tools:context=".PantallaAgregarGasto">

    <TextView
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:background="?attr/colorPrimary"
        android:text="Agregar gasto"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Monto del gasto"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnTertiary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <EditText
        android:id="@+id/monto_gastado"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="?colorSecondaryContainer"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:hint="Ingrese solo nÃºmeros"
        android:textColorHint="?attr/colorOnSecondaryContainer"
        android:textColor="?attr/colorOnSecondaryContainer"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />


    <EditText
        android:id="@+id/nota"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorSecondaryContainer"
        android:padding="12dp"
        android:hint="Nota en que se gasto"
        android:textColor="?attr/colorOnSecondaryContainer"
        android:textColorHint="?attr/colorOnSecondaryContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/monto_gastado"
        />

    <View
        android:id="@+id/division1"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="?colorOnTertiaryContainer"
        app:layout_constraintTop_toBottomOf="@id/nota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_agregar_gasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="48dp"
        android:backgroundTint="?attr/colorPrimaryContainer"
        android:text="Agregar gasto"
        android:textColor="?attr/colorOnPrimaryContainer"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/division1" />

</androidx.constraintlayout.widget.ConstraintLayout>