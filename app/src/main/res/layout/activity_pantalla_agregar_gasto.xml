<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#753B43"
    tools:context=".PantallaAgregarGasto">

    <TextView
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:background="#4B1920"
        android:text="Agregar gasto"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Monto del gasto"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#33090F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <EditText
        android:id="@+id/editar_texto1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#B9898E"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:hint="Ingrese solo nÃºmeros"
        android:textColorHint="#4B1920"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />


    <EditText
        android:id="@+id/editar_texto2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#753B43"
        android:padding="12dp"
        android:hint="Nota en que se gasto"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editar_texto1"
        />
    <View
        android:id="@+id/division1"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/editar_texto2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_agregar_gasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="48dp"
        android:backgroundTint="#B9898E"
        android:text="Agregar gasto"
        android:textColor="#4B1920"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/division1" />


</androidx.constraintlayout.widget.ConstraintLayout>