<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaNuevoIngreso"
    android:background="?attr/colorSurfaceVariant">

    <View
        android:id="@+id/marcoSuperior"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/colorPrimary"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/marcoSuperior"
        android:text="@string/nuevo_ingreso"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="26sp"
        android:textStyle="bold">
    </TextView>

    <Button
        android:id="@+id/agregarIngreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/marcoSuperior"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/agregar_ingreso"
        android:textSize="16sp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary">
    </Button>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/agregarIngreso"
        android:layout_margin="20dp"
        android:hint="@string/nota_en_lo_que_se_gasto"
        android:textColorHint="?attr/colorOnSurfaceVariant"
        android:textColor="?attr/colorOnTertiary"
        android:textSize="24sp">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/marcoSuperior"
        android:layout_margin="40dp"
        android:text="@string/monto_del_ingreso"
        android:textColor="?attr/colorSecondary"
        android:textSize="24sp"
        android:textStyle="bold">
    </TextView>

    <EditText
        android:id="@+id/et_monto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/marcoSuperior"
        android:inputType="numberDecimal"
        android:layout_margin="100dp"
        android:padding="15dp"
        android:background="?attr/colorSecondary"
        android:hint="@string/ingrese_solo_numeros"
        android:textSize="16sp"
        android:textColorHint="?attr/colorTertiary"
        android:textColor="?attr/colorOnSecondary">
    </EditText>

    <EditText
        android:id="@+id/et_nota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/agregarIngreso"
        android:layout_margin="20dp"
        android:hint="Nota en lo que se gasto"
        android:textColorHint="?attr/colorOnSurfaceVariant"
        android:textColor="?attr/colorOnTertiary"
        android:textSize="24sp">
    </EditText>

    <Button
        android:id="@+id/agregarIngreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/marcoSuperior"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Agregar Ingreso"
        android:textSize="16sp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>