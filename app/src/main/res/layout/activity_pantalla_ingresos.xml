<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaIngresos"
    android:background="?attr/colorSurface">

    <View
        android:id="@+id/marcoSuperior"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/colorPrimary"/>

    <TextView
        android:id="@+id/texto_ingresos"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:text="@string/ingresos"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/marcoSuperior"
        app:layout_constraintEnd_toStartOf="@id/mini_ingresos"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mini_ingresos"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/marcoSuperior"
        app:layout_constraintTop_toTopOf="@id/marcoSuperior"
        app:layout_constraintEnd_toEndOf="@id/marcoSuperior"
        app:layout_constraintStart_toEndOf="@id/texto_ingresos"
        app:cardCornerRadius="10dp"
        android:backgroundTint="?attr/colorSecondaryContainer">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:text="@string/saldo_disponible"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSecondaryContainer">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:text="@string/saldo_disponible"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondaryContainer">
            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="152dp"
        android:layout_height="45dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="?attr/colorPrimaryContainer"
        app:layout_constraintStart_toStartOf="@id/mini_ingresos"
        app:layout_constraintEnd_toEndOf="@id/mini_ingresos"
        app:layout_constraintBottom_toBottomOf="@id/mini_ingresos"
        android:layout_margin="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/oscurito"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dolarcito2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signo_dolar"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="25sp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@id/oscurito"
                app:layout_constraintEnd_toStartOf="@id/saldo_view"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/oscurito"
                app:layout_constraintTop_toTopOf="@id/oscurito">

            </TextView>

            <TextView
                android:id="@+id/saldo_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/dolarcito2"
                app:layout_constraintTop_toTopOf="@id/oscurito"
                app:layout_constraintBottom_toBottomOf="@id/oscurito"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:textColor="?attr/colorOnPrimaryContainer">
            </TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_pantallaIngresos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/marcoSuperior"
        app:layout_constraintBottom_toTopOf="@id/btn_anadirIngreso"
        android:background="?attr/colorSurface">
    </androidx.recyclerview.widget.RecyclerView>



    <Button
        android:id="@+id/btn_anadirIngreso"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginBottom="35dp"
        android:text="@string/anadir_ingreso"
        android:textSize="26sp">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>