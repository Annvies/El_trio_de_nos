<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaMenu"
    android:background="?attr/colorSurfaceVariant">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/logo_mondita_sin_letra"
        android:src="@drawable/logo_fondo_vacio"
        android:layout_marginTop="98dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    </ImageView>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_perfil"
        android:layout_width="174dp"
        android:layout_height="122dp"
        android:backgroundTint="?attr/colorSurfaceVariant"
        android:text="@string/perfil"
        android:textColor="?attr/colorOnPrimary"
        android:drawableTop="@drawable/ic_menu_user"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:iconSize="36dp"
        app:cornerRadius="7dp"
        app:strokeColor="?attr/colorOnPrimary"
        app:strokeWidth="2dp"
        android:layout_marginTop="40dp"/>





    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ayuda"
        android:layout_width="174dp"
        android:layout_height="122dp"
        android:backgroundTint="?attr/colorSurfaceVariant"
        android:text="@string/ayuda"
        android:textColor="?attr/colorOnPrimary"
        android:drawableTop="@drawable/ic_menu_help"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_perfil"
        app:iconSize="36dp"
        app:cornerRadius="7dp"
        app:strokeColor="?attr/colorOnPrimary"
        app:strokeWidth="2dp"
        android:layout_marginTop="40dp" />



</androidx.constraintlayout.widget.ConstraintLayout>