<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/rosa</item>
        <item name="android:calendarViewStyle">@style/MyCalendarViewStyle</item>
    </style>


    <style name="MyCalendarViewStyle" parent="@android:style/Widget.Material.CalendarView">
        <item name="android:weekDayTextAppearance">@style/CalWeekdayText</item>
        <item name="android:dateTextAppearance">@style/CalDateText</item>
        <item name="android:focusedMonthDateColor">@color/guindo</item>
        <item name="android:unfocusedMonthDateColor">@color/black</item>
        <item name="android:selectedWeekBackgroundColor">@color/guindo</item>
        <item name="android:weekSeparatorLineColor">@android:color/transparent</item>
    </style>


    <style name="CalWeekdayText" parent="@android:style/TextAppearance.Material.Body2">
        <item name="android:textColor">@color/guindo</item>
    </style>


    <style name="CalDateText" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textColor">@color/guindo</item>
    </style>


    <style name="ThemeOverlay.App.DatePicker">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:calendarViewStyle">@style/MyCalendarViewStyle</item>


        <item name="colorAccent">@color/guindo</item>
        <item name="android:colorAccent">@color/guindo</item>
        <item name="colorControlActivated">@color/rosa</item>
        <item name="colorControlHighlight">@color/guindo</item>


        <item name="android:textColorPrimary">@color/guindoOscuro</item>
    </style>

    <style name="ThemeOverlay.App"/>
    <style name="ThemeOverlay"/>


</resources>
